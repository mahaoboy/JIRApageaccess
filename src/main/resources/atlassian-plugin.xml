<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}"
	name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
		<param name="plugin-icon">images/pluginIcon.png</param>
		<param name="plugin-logo">images/pluginLogo.png</param>
		<param name="configure.url">/plugins/servlet/winagile/pageaccessstatistics
		</param>
	</plugin-info>
	<!-- add our i18n resource -->
	<resource type="i18n" name="i18n" location="JIRAPageAccess" />
	<!-- add our web resources -->
	<web-resource key="JIRAPageAccess-resources" name="JIRAPageAccess Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<resource type="download" name="JIRAPageAccess.css" location="/css/JIRAPageAccess.css" />
		<resource type="download" name="jquery.autocomplete.min.js"
			location="/js/jquery.autocomplete.min.js" />
		<resource type="download" name="JIRAPageAccess.js" location="/js/JIRAPageAccess.js" />
		<resource type="download" name="images/" location="/images" />
		<context>JIRAPageAccess</context>
	</web-resource>
	<web-resource key="pageAccess-resources-pageinfo"
		name="pageAccess-resources-pageinfo Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<resource name="PageAccess.js" type="download" location="/js/PageAccess.js" />
		<context>jira.view.issue</context>
	</web-resource>
	<web-resource key="paginationjskey" name="pagination JavaScript">
		<transformation extension="js">
			<transformer key="jsI18n" />
		</transformation>
		<resource type="download" name="pagination.js" location="/js/pagination.js" />
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<dependency>jira.webresources:jira-global</dependency>
		<dependency>com.atlassian.auiplugin:aui-date-picker</dependency>
	</web-resource>
	<!-- publish our component -->
	<component key="myPageAccessUtl" class="com.winagile.pageaccess.pageAccessUtil" />
	<!-- import from the product container -->
	<component-import key="applicationProperties"
		interface="com.atlassian.sal.api.ApplicationProperties" />
	<ao key="ao-module">
		<description>The module configuring the Active Objects service used by
			this plugin
		</description>
		<entity>com.winagile.jira.activeobject.SaveAccess</entity>
	</ao>
	<component-import key="ao" name="Active Objects service"
		interface="com.atlassian.activeobjects.external.ActiveObjects">
		<description>Component to access Active Objects functionality from the
			plugin
		</description>
	</component-import>
	<component key="tx-processor" name="Transactional Annotation Processor"
		class="com.atlassian.activeobjects.external.TransactionalAnnotationProcessor">
		<decription>Processes @Transactional annotations.</decription>
	</component>
	<component key="SaveAccess-service"
		class="com.winagile.jira.activeobject.AccessSaveServiceImpl" name="SaveAccess Service"
		public="true">
		<interface>com.winagile.jira.activeobject.AccessSaveService
		</interface>
	</component>
	<component-import key="webSudoManager"
		interface="com.atlassian.sal.api.websudo.WebSudoManager" />
	<component-import key="userManager"
		interface="com.atlassian.sal.api.user.UserManager" filter="" />
	<component-import key="loginUriProvider"
		interface="com.atlassian.sal.api.auth.LoginUriProvider" filter="" />
	<component-import key="velocity-renderer"
		interface="com.atlassian.templaterenderer.TemplateRenderer" />
	<rest name="Add Page Access" i18n-name-key="add-page-access.name"
		key="add-page-access" path="/addpageaccess" version="1.0">
		<description key="add-page-access.description">The Add Page Access Plugin</description>
	</rest>
	<servlet name="Page Access Statistics" i18n-name-key="page-access-statistics.name"
		key="page-access-statistics" class="com.winagile.pageaccess.servlet.PageAccessStatistics">
		<description key="page-access-statistics.description">The Page Access Statistics Plugin
		</description>
		<url-pattern>/winagile/pageaccessstatistics</url-pattern>
	</servlet>
	<servlet-filter name="JIRA Page Access Time"
		i18n-name-key="jira-page-access-time.name" key="jira-page-access-time-filter"
		class="com.winagile.pageaccess.servlet.filter.JIRAPageAccessTime"
		location="after-encoding">
		<description key="jira-page-access-time.description">The JIRA Page Access Time Plugin
		</description>
		<url-pattern>/browse/*</url-pattern>
		<init-param>
			<param-name>header</param-name>
			<param-value>Request-Time</param-value>
		</init-param>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</servlet-filter>
	<web-section key="pageSaveAccessSection" name="pageSaveAccessSection Section"
		location="admin_plugins_menu" weight="110">
		<label key="PageAccess.section.name" />
		<condition
			class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition">
			<param name="permission">admin</param>
		</condition>
	</web-section>
	<web-item key="pageSaveAccessWebItem" name="SaveAccessWebItem WebItem"
		section="admin_plugins_menu/pageSaveAccessSection" weight="1">
		<label key="PageAccess.section.name" />
		<link linkId="SaveAccessWebItem">/plugins/servlet/winagile/pageaccessstatistics
		</link>
		<condition
			class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition">
			<param name="permission">admin</param>
		</condition>
	</web-item>
	<servlet name="Test For Check" i18n-name-key="test-for-check.name"
		key="test-for-check" class="com.winagile.pageaccess.servlet.TestForCheck">
		<description key="test-for-check.description">The Test For Check Plugin</description>
		<url-pattern>/testforcheck</url-pattern>
	</servlet>

	<component-import key="i18nResolver"
		interface="com.atlassian.sal.api.message.I18nResolver" />
	<component-import key="pluginLicenseManager"
		interface="com.atlassian.upm.api.license.PluginLicenseManager" />
</atlassian-plugin>
